{
  "name": "hover-helper",
  "publisher": "HomyeeKing",
  "displayName": "hover helper",
  "description": "Enhance vscode hover information for some small but necessary scenario",
  "version": "0.5.2",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:json",
    "onLanguage:jsonc",
    "onLanguage:css",
    "onLanguage:less",
    "onLanguage:sass",
    "onLanguage:stylus"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.convertToCSS",
        "title": "Convert To CSS"
      },
      {
        "command": "extension.convertToCSSProperties",
        "title": "Convert To CSSProperties"
      },
      {
        "command": "extension.askAI",
        "title": "ask ai",
        "when": "editorFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "extension.convertToCSSProperties",
          "group": "7_modification"
        },
        {
          "when": "editorHasSelection",
          "command": "extension.convertToCSS",
          "group": "7_modification"
        }
      ]
    }
  },
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "postversion": "git push"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "18.11.9",
    "@types/node-fetch": "2.6.2",
    "@types/semver": "^7.3.13",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.27.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.1",
    "typescript": "^5.0.2",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "node-fetch": "3.3.0",
    "openai": "^3.2.1",
    "semver": "^7.3.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HomyeeKing/vscode-plugin-preview"
  },
  "license": "MIT",
  "author": "HomyeeKing",
  "bugs": {
    "url": "https://github.com/HomyeeKing/vscode-plugin-preview/issues"
  },
  "homepage": "https://github.com/HomyeeKing/vscode-plugin-preview"
}
